<div class="container-fluid">
	<div class="row">
		<div class="col-md-4">
		</div>
		
		<div class="col-md-8">
			<div class="row">
				<div class="col-md-6">
					<h3>
						<%= @store.name %>
					</h3>
					<%= form_for @store, html: { multipart: true } do |f| %>

                    <div class="field">
                        <%= f.label :Nombre %><br>
                        <%= f.text_field :name, :class => "form-control" %><br>
                    </div>
                
                    <div class="field">
                        <%= f.label :descripcion %><br>
                        <%= f.text_area :description %><br>
                    </div>

                    <div class="field">
                        <%= f.label :Ciudad %><br>
                        <%= f.text_field :city, :class => "form-control" %><br>
                    </div>
                
                    <div class="field">
                        <%= f.label :Estado %><br>
                        <%= f.text_field :state, :class => "form-control" %><br>
                    </div>

                    <div class="field">
                    	 <%= f.file_field :image, as: :file %>
                    </div>

                    <div class="actions">
                        <%= f.submit "Guardar", :class => "btn btn-default"%>
                    </div>

                    <% end %>
				</div>
				
				<div class="col-md-6">
					<div class="panel-heading">
							<h3 class="panel-title">
								Mis Rese√±as
							</h3>
						</div>
						<div class="panel-body">
							Panel content
						</div>
				</div>
			
			</div>
		</div>
	</div>
</div>
