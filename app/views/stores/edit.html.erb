<div class="container-fluid">
	<div class="row">
		<div class="col-md-4">
		</div>
		
		<div class="col-md-8">
			<div class="row">
				<div class="col-md-6">
					<h3>
						<%= @store.name %>
					</h3>
					<%= form_for @store, html: { multipart: true } do |f| %>

                    <div class="field">
                        <%= f.label t('forms.label.name') %><br>
                        <%= f.text_field :name, :class => "form-control" %><br>
                    </div>
                
                    <div class="field">
                        <%= f.label t('forms.label.description') %><br>
                        <%= f.text_area :description %><br>
                    </div>

                    <div class="field">
                        <%= f.label t('forms.label.city') %><br>
                        <%= f.text_field :city, :class => "form-control" %><br>
                    </div>
                
                    <div class="field">
                        <%= f.label t('forms.label.estate') %><br>
                        <%= f.text_field :state, :class => "form-control" %><br>
                    </div>
                    
                    <div class="field">
                        <%= f.label t('forms.label.street') %><br>
                        <%= f.text_field :street, :class => "form-control" %><br>
                    </div>
                    
                    <div class="field">
                      <%= f.label :tag, "Tags (separated by commas)" %><br />
                      <%= f.text_field :tag_list, :class => "form-control" %>
                    </div><br>
                    
                    <div class="field">
                    	 <%= f.file_field :image, as: :file %>
                    </div>
                    
					<br>
                    <div class="actions">
                        <%= f.submit t('forms.buttons.submit'), :class => "btn btn-default"%>
                    </div>

                    <% end %>
				</div>
				
				<div class="col-md-6">
					<div class="panel-heading">
							<h3 class="panel-title">
								<%= t('header.reviews') %>
							</h3>
						</div>
						<div class="panel-body">
							Panel content
							Reviews
						</div>
                        
				</div>
			
			</div>
		</div>
	</div>
</div>
