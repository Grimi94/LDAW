<%= form_for([@store, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> <%= t('forms.error.review:') %></h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <div id="star-rating"></div>
  </div>
  <div class="field">
    <%= f.label  t('forms.label.content') %><br>
    <%= f.text_area :content %><br>
  </div>
  <div class="actions">

    <%= f.submit t('forms.buttons.submit')%>
  </div>
<% end %>

<script>
  $(' #star-rating').raty({
    path: '/assets/',
    scoreName: 'review[ratings]'
  });
</script>
