<div class="container">


          <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tus tiendas
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <% current_user.stores.each do |element| %>
            <div class="row">
                <div class="col-md-6">
                    <a href="#">
                        <% if element.image.presence %>
                            <img class="img-responsive" src="<%= element.image.url %>" alt="">
                        <% else %>
                            <img class="img-responsive" src="http://placehold.it/800x300" alt="">
                        <% end %>
                    </a>
                </div>
                <div class="col-md-5">
                    <h3><%= element.name %></h3>
                    <hr>
                    <p><%= element.description %></p>
                    <div style="display:inline-block;">
                        <%= link_to "View Store", element, :class => "btn btn-default btn-sm"%>
                        <%= link_to "Edit Store", edit_store_path(element), :class => "btn btn-info btn-sm"%>
                        <%= link_to "Delete Store", store_path(element), :class => "btn btn-danger btn-sm", method: :delete, data: {confirm: "Are you sure?"}%>
                    </div>
                </div>
            </div>
            <hr>

        <% end %>
    
</div>

