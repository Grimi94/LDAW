<div class="container">

        <div class="row">
            
            <%= render 'searchForm' %>
            
            <br><br>
            
            <div class="col-md-12">
                <div class="row">
                    <% if @stores.present? %>
                      <% @stores.each do |store| %>
                        <div class="col-sm-4 col-lg-4 col-md-4">
                            <div class="thumbnail">
                            <% if store.image.presence %>
                                <img class="img-responsive" src="<%= store.image.url %>" alt="">
                            <% else %>
                                <img class="img-responsive" src="http://placehold.it/800x300" alt="">
                            <% end %>
                                <div class="caption">
                                        <h4><%= link_to store.name, store%></h4>
                                        <p><%= store.description %></p>
                                </div>
                                <div class="ratings">
                                    <p class="pull-right"><%= "#{store.reviews.length} reviews" %></p>
                                </div>
                            </div>
                        </div>
                    <% end %>
                    <% else %>
                      <p>No existe la(s) tienda(s):  <%= params[:search] %>.</p>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
